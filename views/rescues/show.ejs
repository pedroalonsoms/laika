<!DOCTYPE html>
<html lang="es">
    <%- include("../_header.ejs") %>
<body>
<div class="content">
    <h1>Rescate</h1>

    <%- include("../_animal_navbar.ejs") %>
    <base href="/animals/<%= req.params.animal_id %>/rescue/">
        <nav class="button-container">
            <a class="button" href="edit">Editar</a>
            <a class="button button-secondary" href="delete">Borrar</a>
        </nav>

        <% if(rescue) { %>
            <div class="vertical-spaced">
                <%- include("../_text_label.ejs", {model: rescue, pathName: "date"}) %>
                <p>
                    <b>Edad al Rescate:</b><br>
                    <span><%= rescue.age %></span>
                </p>
                <%- include("../_text_label.ejs", {model: rescue, pathName: "rescuers"}) %>
                <%- include("../_text_label.ejs", {model: rescue, pathName: "organization"}) %>
                <%- include("../_show_address.ejs", {model: rescue.address}) %>
            </div>
        <% } else { %>
            <a class="button" href="new">Nuevo Rescate</a>
            <div class="spacer"></div>
            <p>Â¡No hay rescate!</p>
        <% } %>
    </base>
</div>
</body>
</html>