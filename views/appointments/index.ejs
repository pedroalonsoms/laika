<!DOCTYPE html>
<html lang="es">
    <%- include("../_header.ejs") %>
<body>
<div class="content">
    <h1>Citas</h1>
    <%- include("../_animal_navbar.ejs") %>
    
    <base href="/animals/<%= req.params.animal_id %>/appointments/">
        
        <a class="button" href="new">Nueva cita</a>
        <div class="spacer"></div>

        <% if(appointments.length > 0) { %>
            <table>
                <thead>
                <tr>
                    <th>Fecha</th>
                    <th>Descripción</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                <% for (const appointment of appointments) { %>
                    <tr>
                        <td class="date-table-cell"><%= appointment.date.toText() %></td>
                        <td><%= appointment.description %></td>
                        <td>
                            <a class="button button-secondary" href="<%= appointment.id %>/delete">Eliminar</a>
                        </td>
                    </tr>
                <% } %>
                </tbody>
            </table>
        <% } else { %>
            <p>¡No hay citas!</p>
        <% } %>
    </base>
</div>
</body>
</html>